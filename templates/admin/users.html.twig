{% extends 'admin.html.twig' %}

{% block title %}users index{% endblock %}

{% block body %}






    <div class="row mt">
        <div class="col-md-12">

            <div class="content-panel">
                <table class="table table-striped table-advance table-hover">






                    <br>



                    <thead>
                    <tr>
                        <th>First_name </th>
                        <th>last_name</th>
                        <th> Email</th>


                        <th>Nombre de pub</th>
                        <th>isVerified</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        {% if user.Roles[0]  !='ROLE_ADMIN' %}
                        <tr>

                        <td>{{ user.FirstName }}</td>


                        <td>{{ user.lastname }}</td>

                        <td>{{ user.email }}</td>
<td>{{  user.getPinS|length  }}</td>
                        {% if user.isVerified ==1 %}
                            <td><span class= "badge bg-warning">yes</span></td>
                        {% else %}
                            <td><span class= "badge bg-danger">non</span></td>

                          {% endif %}
                        </tr>




{% endif %}
                    {% else %}
                        <tr>
                            <td colspan="9"> pas de client</td>
                        </tr>
                    {% endfor %}


                    </tbody>
                </table>
            </div>

            <!-- /content-panel -->
        </div>
        <!-- /col-md-12 -->
    </div>

{% endblock %}